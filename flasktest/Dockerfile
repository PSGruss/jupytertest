FROM ubuntu:latest

RUN apt-get update -y && \
    apt-get install -y python3-pip

# We copy just the requirements.txt first to leverage Docker cache
COPY requirements.txt /app/requirements.txt

WORKDIR /app

RUN python3 -m pip install -r requirements.txt

COPY . .

ENTRYPOINT [ "python3" ]

CMD [ "app.py" ]
